<!-- =========  Formular-kortet ========= -->
<section class="py-5" style="background-color:#f8f9fa; min-height:70vh;">
    <div class="container d-flex justify-content-center">
        <div class="card shadow-sm border-0" style="max-width: 650px; width:100%;">
            <div class="card-body p-4 p-md-5">
                <h4 class="fw-bold">Opret Annonce</h4>
                <p class="text-muted mb-4">Udfyld nedenstående oplysninger om din bærbare computer</p>

                <EditForm Model="Listing" OnValidSubmit="HandleValidSubmit" enctype="multipart/form-data" FormName="createListingForm" @bind:after="true">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <!-- =====  Billed-upload  – kommer senere  ===== -->
                    <div class="mb-4">
                        <label class="form-label fw-semibold">Billeder af din bærbare <span class="text-muted">(kommer snart)</span></label>
                        <InputFile OnChange="HandleFiles" multiple accept=".png,.jpg,.jpeg"
                                   class="border border-secondary-subtle rounded text-center w-100 py-5"
                                   style="cursor:pointer;" disabled />
                        <small class="d-block text-muted mt-1">PNG, JPG op til 10 MB (maks 5 billeder)</small>
                    </div>

                    <!-- =====  Formularfelter (titlen, specs, pris...)  ===== -->
                    <div class="row g-3">

                        <!-- Titel -->
                        <div class="col-12">
                            <label for="title" class="form-label fw-semibold">Overskrift *</label>
                            <InputText id="title"
                                       name="Title"
                                       @bind-Value="Listing.Title"
                                       @bind-Value:event="oninput"
                                       class="form-control" />
                            <ValidationMessage For="@(() => Listing.Title)" />
                        </div>

                        <!-- Brand / Mærke -->
                        <div class="col-md-6">
                            <label for="brand" class="form-label fw-semibold">Mærke *</label>
                            <InputText id="brand"
                                       name="Brand"
                                       @bind-Value="Listing.Brand"
                                       @bind-Value:event="oninput"
                                       class="form-control" />
                            <ValidationMessage For="@(() => Listing.Brand)" />
                        </div>

                        <!-- Model -->
                        <div class="col-md-6">
                            <label for="model" class="form-label fw-semibold">Model</label>
                            <InputText id="model"
                                       name="Model"
                                       @bind-Value="Listing.Model"
                                       @bind-Value:event="oninput"
                                       class="form-control" />
                        </div>

                        <!-- CPU -->
                        <div class="col-md-6">
                            <label for="cpu" class="form-label fw-semibold">CPU</label>
                            <InputText id="cpu"
                                       name="CPU"
                                       @bind-Value="Listing.CPU"
                                       @bind-Value:event="oninput"
                                       class="form-control" />
                        </div>

                        <!-- GPU -->
                        <div class="col-md-6">
                            <label for="gpu" class="form-label fw-semibold">GPU</label>
                            <InputText id="gpu"
                                       name="GPU"
                                       @bind-Value="Listing.GPU"
                                       @bind-Value:event="oninput"
                                       class="form-control" />
                        </div>

                        <!-- RAM -->
                        <div class="col-md-4">
                            <label for="ram" class="form-label fw-semibold">RAM&nbsp;(GB)</label>
                            <InputText id="ram"
                                       name="RAM"
                                       @bind-Value="Listing.RAM"
                                       @bind-Value:event="oninput"
                                       class="form-control" />
                        </div>

                        <!-- Storage -->
                        <div class="col-md-4">
                            <label for="storage" class="form-label fw-semibold">Lager&nbsp;(GB)</label>
                            <InputText id="storage"
                                       name="Storage"
                                       @bind-Value="Listing.Storage"
                                       @bind-Value:event="oninput"
                                       class="form-control" />
                        </div>

                        <!-- Skærmstørrelse -->
                        <div class="col-md-4">
                            <label for="screenSize" class="form-label fw-semibold">Skærm&nbsp;(")</label>
                            <InputText id="screenSize"
                                       name="ScreenSize"
                                       @bind-Value="Listing.ScreenSize"
                                       @bind-Value:event="oninput"
                                       class="form-control" />
                        </div>

                        <!-- Styresystem -->
                        <div class="col-md-6">
                            <label for="os" class="form-label fw-semibold">Styresystem</label>
                            <InputText id="os"
                                       name="OS"
                                       @bind-Value="Listing.OS"
                                       @bind-Value:event="oninput"
                                       class="form-control" />
                        </div>

                        <!-- Tilstand -->
                        <div class="col-md-6">
                            <label for="condition" class="form-label fw-semibold">Tilstand *</label>
                            <InputSelect id="condition"
                                         name="Condition"
                                         @bind-Value="Listing.Condition"
                                         class="form-select">
                                <option value="">– vælg –</option>
                                <option>Næsten ny</option>
                                <option>Let brugt</option>
                                <option>Brugt</option>
                                <option>Slidt</option>
                            </InputSelect>
                            <ValidationMessage For="@(() => Listing.Condition)" />
                        </div>

                        <!-- Pris -->
                        <div class="col-md-6">
                            <label for="price" class="form-label fw-semibold">Pris&nbsp;(kr.) *</label>
                            <InputNumber id="price"
                                         name="Price"
                                         @bind-Value="Listing.Price"
                                         @bind-Value:event="oninput"
                                         class="form-control" />
                            <ValidationMessage For="@(() => Listing.Price)" />
                        </div>

                        <!-- Telefon -->
                        <div class="col-md-6">
                            <label for="phone" class="form-label fw-semibold">Telefon *</label>
                            <InputText id="phone"
                                       name="Phone"
                                       @bind-Value="Listing.Phone"
                                       @bind-Value:event="oninput"
                                       class="form-control" />
                            <ValidationMessage For="@(() => Listing.Phone)" />
                        </div>

                        <!-- Lokation -->
                        <div class="col-md-6">
                            <label for="location" class="form-label fw-semibold">Lokation</label>
                            <InputText id="location"
                                       name="Location"
                                       @bind-Value="Listing.Location"
                                       @bind-Value:event="oninput"
                                       class="form-control" />
                        </div>

                        <!-- Beskrivelse -->
                        <div class="col-12">
                            <label for="description" class="form-label fw-semibold">Beskrivelse</label>
                            <InputTextArea id="description"
                                           name="Description"
                                           @bind-Value="Listing.Description"
                                           @bind-Value:event="oninput"
                                           class="form-control"
                                           rows="4" />
                        </div>

                        <!-- Vilkår -->
                        <div class="col-12 form-check mt-2">
                            <InputCheckbox id="acceptTerms"
                                           name="AcceptTerms"
                                           @bind-Value="Listing.AcceptTerms"
                                           class="form-check-input" />
                            <label for="acceptTerms" class="form-check-label">Jeg accepterer vilkår og betingelser *</label>
                            <ValidationMessage For="@(() => Listing.AcceptTerms)" />
                        </div>

                    </div>
                    <!-- =====  /Formularfelter  ===== -->


                    <div class="d-flex gap-2 mt-4">
                        <button class="btn btn-primary flex-grow-1" type="submit">Opret annonce</button>
                        <button class="btn btn-outline-secondary" type="button" @onclick="Cancel">Fortryd</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</section>

@code
{
    /* ------------  Form-state ------------ */
    [SupplyParameterFromForm]                    // ❶  <- NYT
    public ListingModel Listing { get; set; } = new();   // ❷  field → property
    private readonly List<IBrowserFile> images = new();
    private readonly List<string>       imageErrors = new();

    /* ------------  File-handler ------------ */
    private void HandleFiles(InputFileChangeEventArgs e)
    {
        // Deaktiveret – upload-logik kommer i et senere sprint
        imageErrors.Clear();
        images.Clear();
    }

    /* ------------  Knap-handlers ------------ */
    private async Task HandleValidSubmit()   // ← gjort ASYNC
    {
        Console.WriteLine($"[LISTING] Gemmer annonce '{Listing.Title}'");

        /* 1) Gem produktet i product_models */
        int productId = await DbService.InsertProductModelAsync(new ProductModel
        {
            Brand       = Listing.Brand,
            Model       = Listing.Model,
            Gpu         = Listing.GPU,
            Cpu         = Listing.CPU,
            Ram         = Listing.RAM,
            Storage     = Listing.Storage,
            OS          = Listing.OS,
            Price       = Listing.Price.HasValue ? Listing.Price.Value.ToString() : "0",
            ScreenSize  = Listing.ScreenSize,
            Condition   = Listing.Condition
        });

        /* 2) Gem selve annoncen i listings */
        int listingId = await ListingRepo.InsertAsync(new Listing
        {
            ProductId   = productId,    
            UserId      = 1,               // TODO: udskift med faktisk bruger-id når auth er på plads
            Title       = Listing.Title,
            Description = Listing.Description,
            Phone       = Listing.Phone,
            Location    = Listing.Location
        });

        /* 3) Redirect til detaljer-visning */
        NavManager.NavigateTo($"/ListingsDetailsPage/{listingId}");
    }

    private void Cancel()  => NavManager.NavigateTo("/ListingsPage", forceLoad: true);
    private void Logout()  => NavManager.NavigateTo("/login",         forceLoad: true);

    /* ------------  Model-klasse (din oprindelige) ------------ */
    public class ListingModel
    {
        [Required(ErrorMessage = "Titel er påkrævet")]
        public string Title { get; set; } = string.Empty;

        [Required(ErrorMessage = "Mærke er påkrævet")]
        public string Brand { get; set; } = string.Empty;

        public string Model          { get; set; } = string.Empty;
        public string CPU            { get; set; } = string.Empty;
        public string RAM            { get; set; } = string.Empty;
        public string Storage        { get; set; } = string.Empty;
        public string GPU            { get; set; } = string.Empty;
        public string ScreenSize     { get; set; } = string.Empty;
        public string OS             { get; set; } = string.Empty;

        [Required(ErrorMessage = "Tilstand er påkrævet")]
        public string Condition { get; set; } = string.Empty;

        [Required(ErrorMessage = "Pris er påkrævet")]
        [Range(1, 1_000_000, ErrorMessage = "Pris skal være positiv")]
        public decimal? Price { get; set; }

        public string Description { get; set; } = string.Empty;

        [Required(ErrorMessage = "Telefonnummer er påkrævet")]
        public string Phone { get; set; } = string.Empty;

        public string Location { get; set; } = string.Empty;

        [Range(typeof(bool), "true", "true", ErrorMessage = "Du skal acceptere vilkår og betingelser")]
        public bool AcceptTerms { get; set; }
    }
}
